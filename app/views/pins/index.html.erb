<p style="color: green"><%= notice %></p>

<h1>Pins</h1>

<div id="pins">
  <% @pins.each do |pin| %>
    <%= render pin %>
    <p>
      <%= link_to "Show this pin", pin %>
    </p>

    <% if pin.user == current_user %>
    <%= link_to 'Edytuj', edit_pin_path(pin) %>
    <%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś pewien?' } %>

   <% end %>

   <% end %>
</div>

<%= link_to "New pin", new_pin_path %>
